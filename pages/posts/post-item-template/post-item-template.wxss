/* pages/posts/post-item-template/post-item-template.wxss */
.post-container{
    display: flex;
    flex-direction: column;
    border-top: 1px solid #ededed;
  }
.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .post-author{
    width: 60rpx;
    height: 60rpx;
  }
  .post-date{
    margin-left: 10px;
  }
  .post-title{
    font-size: 34rpx;
    font-weight: 600;
    margin-left: 10px;
    color: #333;
    margin-bottom: 10rpx;
  }
  .post-image{
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
  }
  .post-content{
    font-size: 28rpx;
    color: #666;
    letter-spacing: 2rpx;
    margin-left: 10px;
    margin-bottom: 20rpx;
  }
  .post-like{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 20rpx;
    margin-bottom: 40rpx;
  
  }
  .post-like-image{
    height: 32rpx;
    width: 32rpx;
    margin-right: 16rpx;
  }
  .post-like-font{
    margin-right: 40rpx;
  }